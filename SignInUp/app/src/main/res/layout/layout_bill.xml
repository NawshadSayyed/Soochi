<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginTop="20dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="340dp"
        android:layout_height="231dp"
        android:layout_gravity="center"
        card_view:cardCornerRadius="5dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/print"
            android:layout_marginTop="10dp">


            <TextView
                android:id="@+id/title"
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:background="@layout/button_shadow"
                android:gravity="center"
                android:maxLines="3"
                android:padding="8dp"
                android:text="Sale"
                android:textColor="#222"
                android:textSize="20dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_toEndOf="@+id/title"
                android:background="@layout/button_shadow"
                android:maxLines="3"
                android:padding="8dp"
                android:text="Invoice no."
                android:textColor="#222"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/details"
                android:layout_marginStart="101dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/title"
                android:background="@layout/button_shadow"
                android:maxLines="3"
                android:padding="8dp"
                android:text="Date"
                android:textColor="#222"
                android:textSize="12dp"
                android:textStyle="bold" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:layout_marginTop="80dp"
                android:background="@color/black" />

            <TextView
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/title"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="87dp"
                android:background="@layout/button_shadow"
                android:maxLines="3"
                android:padding="8dp"
                android:text="Total"
                android:textColor="#222"
                android:textSize="10dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/received"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/total"
                android:layout_alignParentStart="true"
                android:layout_marginStart="26dp"
                android:layout_marginTop="11dp"
                android:background="@layout/button_shadow"
                android:maxLines="3"
                android:padding="8dp"
                android:text="Received"
                android:textColor="#222"
                android:textSize="10dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/received"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="9dp"
                android:background="@layout/button_shadow"
                android:maxLines="3"
                android:padding="8dp"
                android:text="Balance"
                android:textColor="#222"
                android:textSize="10dp"
                android:textStyle="bold" />



            <TextView
                android:id="@+id/text_View1"
                android:layout_width="63dp"
                android:layout_height="31dp"
                android:layout_marginStart="14dp"
                android:layout_toEndOf="@+id/details"
                android:text="TextView" />

            <TextView
                android:id="@+id/text_View2"
                android:layout_width="69dp"
                android:layout_height="32dp"
                android:layout_below="@+id/text_View1"
                android:layout_marginStart="17dp"
                android:layout_marginTop="9dp"
                android:layout_toEndOf="@+id/date"
                android:text="TextView" />

            <TextView
                android:id="@+id/text_View3"
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:layout_alignTop="@+id/total"
                android:layout_marginStart="23dp"
                android:layout_marginTop="3dp"
                android:layout_toEndOf="@+id/total"
                android:text="TextView" />

            <TextView
                android:id="@+id/text_View4"
                android:layout_width="72dp"
                android:layout_height="30dp"
                android:layout_below="@+id/text_View3"
                android:layout_marginStart="11dp"
                android:layout_marginTop="11dp"
                android:layout_toEndOf="@+id/received"
                android:text="TextView" />

            <TextView
                android:id="@+id/text_View5"
                android:layout_width="76dp"
                android:layout_height="27dp"
                android:layout_below="@+id/text_View4"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/balance"
                android:text="TextView" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/card_view_1"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardCornerRadius="5dp">

        <Button
            android:id="@+id/button_pdf"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
           android:layout_marginStart="200dp"
            android:background="@layout/button_shadow"
            android:text="Create a Pdf" />

    </android.support.v7.widget.CardView>


</LinearLayout>
